	<nav class="navMenu  border">
		
            <a id="school" onclick="navigate(this.id)" href="#"> <i <i <i class="fa-solid fa-graduation-cap fa-spin" style="color: #00328a;"></i> School</a>
	      <a id="expenses" onclick="navigate(this.id)" href="#"> <i <i class="fa-sharp fa-solid fa-money-check-dollar fa-fade" style="color: #0d7000;"></i> expenses</a>
            <a id="tools" onclick="navigate(this.id)" href="#"> <i <i <i class="fa-solid fa-gear fa-spin" style="color: #808080;"></i> tools</a>


	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

                  if (id == 'school')
				window.open("https://www.notion.so/School-701e9b165c964cc9ad5202f0084486a4?pvs=4", '_blank').focus();

			else if (id == 'expenses')
				window.open("https://www.notion.so/Expenses-95d8f3562a9b44b29a4274dc0fe7ba88?pvs=4').focus();

                  else if (id == 'tools')
				window.open("https://www.notion.so/Tools-fb6aaf20af4344f1b7eae1e2c9f1bd11?pvs=4').focus();
			
		}
	</script>


